<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="chat.client.view.chats.ChatsController">
   <children>
      <Label fx:id="chattingUsernames" layoutX="125.0" layoutY="1.0" prefHeight="50.0" prefWidth="475.0" text="Other username(s)">
         <padding>
            <Insets left="10.0" />
         </padding>
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Label>
      <TextField fx:id="messageInputField" layoutX="125.0" layoutY="363.0" prefHeight="25.0" prefWidth="375.0" />
      <Button layoutX="525.0" layoutY="363.0" mnemonicParsing="false" onAction="#onSendButton" prefWidth="50.0" text="Send" />
      <ButtonBar layoutX="-74.0" layoutY="50.0" prefHeight="40.0" prefWidth="200.0" />
      <VBox prefHeight="400.0" prefWidth="100.0">
         <children>
            <Button layoutX="10.0" layoutY="160.0" mnemonicParsing="false" onAction="#onNewChat" prefHeight="50.0" prefWidth="100.0" text="New chat">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </Button>
            <Label prefHeight="25.0" prefWidth="100.0" text="Active:">
               <padding>
                  <Insets left="10.0" />
               </padding>
            </Label>
            <ScrollPane prefHeight="325.0" prefWidth="100.0">
               <content>
                  <VBox fx:id="activeUsersContainer" prefHeight="322.0" prefWidth="98.0" />
               </content>
            </ScrollPane>
         </children>
      </VBox>
      <TextArea fx:id="messagesTextArea" editable="false" layoutX="126.0" layoutY="50.0" prefHeight="300.0" prefWidth="450.0" />
   </children>
</AnchorPane>
